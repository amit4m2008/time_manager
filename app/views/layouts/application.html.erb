<!DOCTYPE html>
<html>
  <head>
    <title>TimeRecording</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application", "common" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="slider">
      <div id="header_wrapper">
        <div id="header">
          <a href="#home" style="text-decoration: none;">
            <h1>Time Manager</h1>
          </a>
        </div>
      </div>
      <div id="menu_wrapper">
        <div id="menu">
          <ul class="navigation">
            <% if user_signed_in? %>
              <li><%= link_to "Home", user_root_path %><span class="ui_icon home"></span></li>
            <% else %>
              <li><%= link_to "Home", root_path %><span class="ui_icon home"></span></li>
            <% end %>

            <li><%= link_to "About", about_us_path %><span class="ui_icon aboutus"></span></li>
            <li><%= link_to "Instructions", instructions_path %><span class="ui_icon services"></span></li>
            <li><%= link_to "Contact", contact_path %><span class="ui_icon contactus"></span></li>
            <% if user_signed_in? %>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %><span class="ui_icon gallery"></span></li>
            <% else %>
              <li><%= link_to("Sign in", new_session_path(resource_name), :class => "", :onclick => "" ) %><span class="ui_icon gallery"></span></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div>

      </div>
      <%= yield %>
      <div id="footer_wrapper">
        <div id="footer">
        	Copyright Â© 2013 Amit Sharma | Designed by Amit Sharma
        </div>
      </div>
    </div>
  </body>
</html>
