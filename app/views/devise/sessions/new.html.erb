<div id="content_wrapper">
  <div id="content">
    <img class="scrollButtons left" src="" alt=""/>
    <div class="scroll" style="overflow: hidden;">
      <div class="scrollContainer" style="width: 4300px;">
        <div class="panel" id="home" style="float: left; position: relative;">
          <div class="alert">
            <% if flash[:alert].present? %>
              <%= alert %>
            <% end %>
          </div>

          <% if flash[:notice].present? %>
            <div class="notice"><%= notice %></div>
          <% end %>

          <div class="cleaner_h10"></div>

          <h1>Sign In</h1>
          <div class="cleaner_h10"></div>
          <div class="col_380 float_l">
            <div id="contact_form">
              <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                <%= f.input :email, :required => false, :autofocus => true, :input_html => {:style => "width: 230px; height: 18px; padding: 5px; border: 1px solid #000; background: none repeat scroll 0 0 #fff; color: #000;"} %>
                <div class="cleaner_h10"></div>
                <div class="cleaner_h10"></div>

                <%= f.input :password, :required => false, :input_html => {:style => "width: 230px; height: 18px; padding: 5px; border: 1px solid #000; background: none repeat scroll 0 0 #fff; color: #000;"} %>
                <div class="cleaner_h10"></div>
                <%= f.submit "Sign in", class: "submit_button" %>
                <% end %>
              </div>
            </div>
            <div class="col_380 float_r">
              <h4>Need an account..?</h4>
              <h4>For registration please <%= link_to "click here", new_registration_path(resource_name) %></h4>
              <br/>
            </div>
            <div class="cleaner_h50"></div>
          </div>
        </div>
      </div>
    </div>
  </div>